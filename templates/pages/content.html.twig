{% extends 'layout/layout.html.twig' %}

{% block content %}
    <section class="features-icons bg-light text-center">
        <div class="container">
            <h1>Liste des prénoms</h1>
            <p class="space text-end"><a href="{{ url('addname') }}">Faire une demande d'ajout de prénom à la liste</a></p>
            <div class="space row">
                <table>
                    <thead>
                    <tr>
                        <th class="col-lg-2">Prénom</th>
                        <th class="col-lg-2">Origine</th>
                        <th class="col-lg-5">Signification</th>
                        <th class="col-lg-1 last-border">Like</th>

                    </tr>
                    </thead>
                    <tbody>
                    {% for firstname in firstnames %}
                    <tr>
                        <th class="border-bottom-black">{{ firstname.firstname }}</th>
                        <th class="border-bottom-black">{{ firstname.origin }}</th>
                        <th class="border-bottom-black">{{ firstname.description }}</th>
                        <th class="last-border border-bottom-black"><i class="bi bi-hand-thumbs-up">25</i></th>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="space">
            {{ knp_pagination_render(firstnames) }}
            </div>
        </div>
    </section>
{% endblock %}